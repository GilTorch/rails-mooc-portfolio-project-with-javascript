
<div class="container-fluid">
    <div class="row">
        <div class="courses-container col-md-6 offset-md-3 mt-3 mb-3">
            <h3>Courses available on the platform:</h3>
            <ul class="courses-list">
                Loading ...
            </ul>
        </div>
    </div>
</div>

<script>
function parseCourse(data){
    let currentUserId="<%= current_user.id %>"

    let coursesList=""
       data.forEach((course)=>{
         coursesList+=`<li>${course.id}.-<a href="/courses/${course.id}">${course.title}</a> <i class="${completeFailIcon(course,currentUserId)}"></i> </li>`
     })

     $(".courses-list").html(coursesList)
}

Course.all(parseCourse)

</script>